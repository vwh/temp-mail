{
  "name": "temp-mail",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --remote",
    "deploy": "wrangler deploy --minify",
    "cf-info": "bun run ./cloudflare-info/index.ts",
    "tail": "wrangler tail",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:create": "wrangler d1 create temp-mail-d1",
    "db:tables": "wrangler d1 execute temp-mail-d1 --file ./sql/schema.sql --remote",
    "db:indexes": "wrangler d1 execute temp-mail-d1 --file ./sql/indexes.sql --remote",
    "kv:create": "wrangler kv namespace create temp-mail-kv --preview",
    "r2:create": "wrangler r2 bucket create temp-mail-attachments",
    "r2:create-preview": "wrangler r2 bucket create temp-mail-attachments-preview",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write --unsafe ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write --unsafe ./src",
    "tsc": "tsc --noEmit",
    "knip": "knip"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.0.2",
    "@hono/zod-validator": "^0.7.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@scalar/hono-api-reference": "^0.9.12",
    "hono": "^4.8.5",
    "html-to-text": "^9.0.5",
    "postal-mime": "^2.4.4",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/bun": "latest",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^24.1.0",
    "knip": "^5.62.0",
    "typescript": "^5.8.3",
    "wrangler": "^4.24.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
